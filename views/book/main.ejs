<div class="buttons">
  <a class="btn main_btn" href="/logout">LogOut</a>
</div>

<div class="header">
  <h1>Welcome <span><%= name %></span></h1>
  <p>Here Are Your BookList</p>
  <p>If You Want To Add A New Book , Then Click The "Add New" button</p>
</div>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Book Name</th>
      <th scope="col">Auhor</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>

  <% if (books) { %>
  <p>HERE ARE YOUR BOOKS</p>
  <%} else { %>
  <p>NO BOOKS</p>
  <% } %> <% books.forEach(function(book){ %>
  <tbody>
    <tr>
      <th scope="row">#</th>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td>
        <a href="/editBook/<%= book._id %>"><i class="fas fa-edit"></i></a>
      </td>
      <td>
        <a href="/delete/<%= book._id %>" class="btn"
          ><i class="fas fa-trash"></i
        ></a>
      </td>
    </tr>
  </tbody>
  <% }); %>
</table>

<div class="buttons">
  <a class="btn main_btn" href="/addBook">Add New</a>
</div>
